{% extends 'base.html.twig' %}

{% block title %}Whishlist index{% endblock %}

{% block body %}
    <h1>Whishlist index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for whishlist in whishlists %}
            <tr>
                <td>{{ whishlist.id }}</td>
                <td>
                    <a href="{{ path('whishlist_show', {'id': whishlist.id}) }}">show</a>
                    <a href="{{ path('whishlist_edit', {'id': whishlist.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('whishlist_new') }}">Create new</a>
{% endblock %}
