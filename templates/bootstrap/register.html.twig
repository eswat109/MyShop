{% extends 'bootbase.html.twig' %}

{% block title %}Welcome to register page!{% endblock %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}
{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>


    <div class="jumbotron">
        <div class="container" style="max-width: 50%;">
            <h1>Register Yourself</h1>

            Please type your login and password here:

        </div>
        <div class="container" style="max-width: 50%;">
            {{ form_start(form) }}
            {{ form_widget(form) }}
            <button class="btn btn-primary">{{ button_label|default(btn_name) }}</button>
            {{ form_end(form) }}

            Back to <a href="{{ path('login') }}">login</a>
        </div>
    </div>
{% endblock %}
