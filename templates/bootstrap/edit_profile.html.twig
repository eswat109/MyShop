{% extends 'bootbase.html.twig' %}

{% block title %}Your profile{% endblock %}
{% form_theme editForm 'bootstrap_4_layout.html.twig' %}
{% form_theme passwordForm 'bootstrap_4_layout.html.twig' %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

    <div class="jumbotron jumbotron-fluid">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-10">
                    <h1>Edit your profile, {{ guest.firstName}} {{ guest.secondName }}</h1>

                    Write new data:

                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-10">
                    <div class="container" style="max-width: 50%;">
                        {{ form(editForm) }}
                    </div>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-10">
                    Change password:
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-10">
                    <div class="container" style="max-width: 50%;">

                        {{ form(passwordForm) }}
                    </div>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-10">
                    Back to <a href="{{ path('profile') }}">profile</a>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
